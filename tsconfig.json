{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "types": ["node", "mocha"],
    "diagnostics": true,
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "test",
    "test/**/*.json"
  ],
  "exclude": ["node_modules"]
}
